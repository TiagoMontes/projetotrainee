<html>
<head>
    <style>
        * {
            margin: 0;
            padding: 0;
        }
        
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }


        input , select{
            margin: 10px 0;
            border: none;
        }

        form {
            display: flex;
            flex-direction: row;
            justify-content: center;
            gap: 20px;
        }

        h1 {
            font-size: 72px;
            background: -webkit-linear-gradient(62deg,#FBAB7E, #F7CE68);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 36px;
            font-weight: bold;
            margin-top: 60px;
        }

        ul{
            display: flex;
            flex-direction: column;
            align-items: left;
            justify-content: center;
        }

        li {
            list-style: none;
            margin: 10px 0;
            width: 400px;
            border-bottom: 2px solid #FBAB7E;
            border-left: 2px solid #FBAB7E;
            padding: 10px;
            border-radius: 5px;
        }

        .Cadastro{
            border: 1px solid #000;
        }

        .itens_filme{
            display: block;
            justify-content: space-between;
            gap: 20px;
            align-items: center;
            margin-bottom: 50px;
            border: 2px solid #FBAB7E;
            padding: 20px;
            border-radius: 10px;
        }

        .campo_texto{
            width: 450px;
            height: 36px;
            font-size: 18px;
            padding: 0 0 0 10px;
            border-bottom: 1px solid grey;
            
        }

        #botao{
            width: 112px;
            height: 36px;
            font-size: 18px;
            background-color: #ffffff;
            color: black;
            border-bottom: 1px solid grey;
            cursor: pointer;
            border-radius: 5px;
            
            transition: 0.5s ease;
        }

        #botao:hover{
            background-color: #FBAB7E;
            color: white;
            border: 1px solid white;

        }

        .itens_critica{
            display: flex;
            flex-direction: column;
        }

    </style>
</head>
    <body>
        <div class="header">
            <h1>Melhores filmes de 2022</h1>
            <form action="/filme/novo" method="POST">
                <input type="text" name="filme" class="campo_texto" placeholder="Digite o nome do filme">
                <input type="submit" id="botao" value="Adicionar">
                <select name="diretor" id="botao">
                    {% for diretor in diretores%}
                        <option value={{diretor.id}}>{{diretor.name}}</option>
                    {% endfor %}
                </select>
                <select name="generoId" id="botao">
                    {% for genero in generos %}
                        <option value={{genero.id}}>{{genero.titulo}}</option>
                    {% endfor %}
                </select>
            </form>
            <label> 
                Filtrar: <input type="search" id="pesquisa" class="campo_texto" oninput="filtrar()"/>
            </label>
        </div>
        <h2>Lista de filmes</h2>
        <ul id="lista_filmes">    
            {% for filme in filmes %}  {# esta linha significa - para cada filme dentro de filmes, executaremos o codigo abaixo#}
                <div class="itens_filme">               
                    <li class="atributo filtravel">{{filme.name}}</li>
                    <li class="atributo filtravel">{{filme.diretor.name}}</li>
                    <li class="atributo filtravel">{{filme.genero.titulo}}</li>
                    <form action="/filme/delete" method="POST">
                        <input type="hidden" name="id" value="{{ filme.id }}"/>
                        <input type="submit" id="botao" value="Remover"/>
                    </form>
                    <form class="itens_critica">
                        <input type="text" class="campo_texto" placeholder="Deixe sua nota de 0 a 5 e uma critica ao filme" />
                        <input type="submit" value="Enviar" id="botao"/>
                    </form>
                </div>
            {% endfor %}
        </ul>
    </body>
</html>
<script>

    //Vamos mapear todas as listas para que o filtro consiga procurar em todos os padrÃµes, seja filme, diretor ou genero
    const lista = document.querySelector("#lista_filmes");
    const filtraveis = lista.querySelectorAll(".filtravel");

    const filtrar = () => {
        const itens_filme = document.querySelectorAll(".itens_filme");
        itens_filme.forEach((item) => {
            item.style.display = "none";
        })

        let pesquisa = document.querySelector("#pesquisa").value.toLowerCase();

        filtraveis.forEach((filtravel) => {
            let nome = filtravel.innerText.toLowerCase();
            if (nome.includes(pesquisa)) {
                filtravel.parentNode.style.display = "block";
            }
        });
    }
</script>

